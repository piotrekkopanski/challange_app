.question id="question-#{@question.id}"
  div.title1 
   h2= @question.title
   = render "details", question: @question

  p.description
    = best_in_place @question, :contents
    
  
  .can
  - if can? :update, @question
    = button_to 'Edit', edit_question_path(@question), "class"=>"editbutton"
    p
    = button_to 'Delete', question_path(@question, method: :delete)

  - else 
    'not can
  
  .title2
    h2 Answers

  - if @question.answers.any?
    = render @question.answers
     
  - else  
    .title3-1   
      '  There are no answers to this question.

  .title3
    h2 Your Answer 
  
  
    - if @table.include? true
     'Question have accepted answer 
    - else
     ' (No is not any true answer)

  .answerfield
   = form_for [@question, @answer]  do |f|
   
           .field
            = f.label :contents
            = f.text_area :contents
            .actions= f.submit 'Save'



